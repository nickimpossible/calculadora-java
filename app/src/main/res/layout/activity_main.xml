<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_expres"

        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="5+5"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:gravity="center"
        android:ellipsize="end"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/txt_result"

        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="10"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:gravity="center"
        android:ellipsize="end"
        android:maxLines="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_limp"
            style="@style/operator_botton"
            android:layout_weight="3"
            android:text="c" />

        <Button
            android:id="@+id/bt_divisao"
            style="@style/operator_botton"
            android:text="/" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_7"
            style="@style/number_botton"
            android:text="7"
            />

        <Button
            android:id="@+id/bt_8"
            style="@style/number_botton"
            android:text="8" />

        <Button
            android:id="@+id/bt_9"
            style="@style/number_botton"
            android:text="9" />
        <Button
            android:id="@+id/bt_mult"
            style="@style/operator_botton"
            android:text="x" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_4"
            style="@style/number_botton"
            android:text="4" />

        <Button
            android:id="@+id/bt_5"
            style="@style/number_botton"
            android:text="5" />

        <Button
            android:id="@+id/bt_6"
            style="@style/number_botton"
            android:text="6" />
        <Button
            android:id="@+id/bt_subtracao"
            style="@style/operator_botton"
            android:text="-" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_1"
            style="@style/number_botton"
            android:text="1" />

        <Button
            android:id="@+id/bt_2"
            style="@style/number_botton"
            android:text="2" />

        <Button
            android:id="@+id/bt_3"
            style="@style/number_botton"
            android:text="3" />
        <Button
            android:id="@+id/bt_soma"
            style="@style/operator_botton"
            android:text="+" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_ponto"
            style="@style/number_botton"
            android:text="." />

        <Button
            android:id="@+id/bt_0"
            style="@style/number_botton"
            android:text="0" />

        <Button
            android:id="@+id/bt_del"
            style="@style/number_botton"
            android:text="del" />

        <Button
            android:id="@+id/bt_igual"
            style="@style/operator_botton"
            android:text="=" />

    </LinearLayout>

</LinearLayout>











